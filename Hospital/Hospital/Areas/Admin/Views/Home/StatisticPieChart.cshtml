<script>



    $(window).bind("load", function () {
        var ctx = document.getElementById("myChart").getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ["Doktorzy", "Pielęgniarki", "Pacjenci"],
                datasets: [{
                    label: '# of Votes',
                    data: [@Model.statisticsDictionary["Doctor"], @Model.statisticsDictionary["Nurse"], @Model.statisticsDictionary["Patient"]],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255,99,132,1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options:
            {
                beginAtZero: true,
                title:
                {
                    display: true,
                    position: 'bottom',
                    text: 'Ilość wszystkich użytkowników : ' + @(Model.statisticsDictionary["Nurse"] + Model.statisticsDictionary["Doctor"]+ @Model.statisticsDictionary["Patient"])
                }
            }
            
        });
    });


</script>
<div class="row">
    <div class="col-md-4">

    </div>
    <div class="col-md-4">
        <canvas id="myChart" width="400" height="400"></canvas>

    </div>
    <div class="col-md-4"></div>
</div>
