@using Microsoft.AspNetCore.Identity
@using Hospital.Model.Identity;
@using Hospital.Core.Enums;
@inject SignInManager<ApplicationUser> SignInManager
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hospital</title>
    <script asp-src-include="lib/jquery/dist/jquery.js"></script>
    <script asp-src-include="lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script asp-src-include="lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-hero.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/lib/jquery-ui/dist/css/jquery-ui.css" />
        <script src="~/lib/jquery-ui/dist/js/jquery-ui.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/lib/jquery-ui/dist/css/jquery-ui.min.css" asp-append-version="true" />
        <script src="~/lib/jquery-ui/dist/js/jquery-ui.min.js" asp-append-version="true"></script>
    </environment>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col align-self-start header-col">
                <a asp-area=""
                   asp-controller="Home" asp-action="Index" class="navbar-brand"><img class="logo" src="~/images/logoHospital.png" /></a>

            </div>
            <div class="col-sm">

            </div>
            <div class="col-sm">

            </div>
        </div>
    </div>
    <nav class="navbar navbar-dark bg-navbar-blue navbar-expand-md mb-auto">
        <div class="container">
            <nav class="navbar navbar-expand-md mb-auto">
                <ul class="nav navbar-nav">
                    <li class="nav-item"><a asp-area="Patient" asp-controller="Home" asp-action="Index" class="nav-link"></a></li>
                    <li class="nav-item"><a asp-area="Patient" asp-controller="Home" asp-action="Index" class="nav-link">Start</a></li>
                    <li class="nav-item"><a asp-area="Patient" asp-controller="Home" asp-action="Visits" class="nav-link">Wizyty</a></li>
                    <li class="nav-item"><a asp-area="Patient" asp-controller="Home" asp-action="Referrals" class="nav-link">Skierowania</a></li>
                    <li class="nav-item"><a asp-area="Patient" asp-controller="Home" asp-action="Prescriptions" class="nav-link">Recepty</a></li>
                    <li class="nav-item"><a asp-area="Patient" asp-controller="Home" asp-action="Medicines" class="nav-link">Leki</a></li>
                    <li class="nav-item"><a asp-area="Patient" asp-controller="Home" asp-action="DoctorsGraphics" class="nav-link">Grafiki lekarzy</a></li>
                    <li class="nav-item"><a asp-area="Patient" asp-controller="Home" asp-action="DoctorsWorkHours" class="nav-link">Dyżury</a></li>
                    <li class="nav-item"><a asp-area="Patient" asp-controller="Home" asp-action="Documents" class="nav-link">Dokumenty</a></li>
                </ul>
                    </nav>
                    <div class="navbar-collapse collapse">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>

            <div class="container body-content">


            </div>
</nav>
        <div class="container">
            <div class="row mb-3">
                @if (ViewBag.TabName != null)
                {
                    <h2 class="col-md-3">@ViewBag.TabName</h2>
                    @Html.ActionLink("Chcę umówić wizytę lub badanie", "ArrangeVisit", "Home", null, new { @class = "btn btn-yellow offset-md-6 col-md-3 float-right" })
                }
            </div>

            @RenderBody()
        </div>
        <hr />
        <footer>
            <p>&copy; 2018 - Hospital</p>
        </footer>
    </div>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js" asp-append-version="true"></script>
        <script src="~/lib/moment/dist/js/moment.js" asp-append-version="true"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap-hero.js" asp-append-version="true"></script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.3.1.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-tsQFqpEReu7ZLhBV2VZlAu7zcOV+rXbYlF2cqB8txI/8aZajjp4Bqd+V6D5IgvKT">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>