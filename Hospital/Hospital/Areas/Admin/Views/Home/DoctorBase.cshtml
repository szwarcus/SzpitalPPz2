@model Hospital.Areas.Admin.ViewModels.HomeVM

@{
    Layout = "_AdminLayout";
}

<a asp-controller="Doctor" asp-action="DoctorCreate"   class="btn btn-success">Dodaj doktora</a>



<table id="dt" class="table table-striped table-responsive-md" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th class="th-sm">
                Imię
            </th>
            <th class="th-sm">
                Nazwisko
            </th>
            <th />
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.applicationUsersDTO)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    <a asp-controller="Doctor" asp-action="DoctorEdit" asp-route-id="@item.userId">Edytuj</a> |
                    <a asp-controller="Doctor" asp-action="DoctorDetails" asp-route-id="@item.userId">Detale</a> |
                    <a asp-controller="Doctor" asp-action="DoctorDelete" asp-route-id="@item.userId"  onclick="return confirm('Czy chcesz usunąć ten rekord: @item.FirstName @item.LastName?')">Usuń</a>
                </td>
            </tr>
        }
    </tbody>

</table>
