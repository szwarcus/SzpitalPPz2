@model Hospital.Areas.Doctor.ViewModels.ChangePasswordVM
@{
    Layout = "_DoctorLayout";
}
<h1>Zmiana hasła dostępu</h1>
<form asp-action="ChangePassword" asp-controller="Account" method="post" class="form-horizontal">

    <div class="form-group">
        <label asp-for="NewPassword" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="NewPassword" class="form-control" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>

        </div>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmNewPassword" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="ConfirmNewPassword" class="form-control" />
            <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="OldPassword" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="OldPassword" class="form-control" />
            <span asp-validation-for="OldPassword" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">

        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Zmień hasło" />

        </div>
    </div>

</form>

