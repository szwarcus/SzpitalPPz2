@model Hospital.Areas.Patient.ViewModels.Home.Visits.DescriptionVisitVM

<div class="row w-100 pt-2 border p-4 m-1">
    <div class="col-12 col-lg-3 col-xl-3 pb-2 pl-2">
        <text class="font-weight-bold">@Model.Date.ToString("yyyy-MM-dd HH:mm")</text>
    </div>
    <div class="col-12 col-lg-5 col-xl-7 pb-2">
        <div class="pb-1">
            <text>@Model.Specialization @Model.DoctorName</text>
        </div>
        <div>
            <text>@Model.Description</text>
        </div>
    </div>
    <div class="col-12 col-lg-4 col-xl-2 text-center">
        <button type="button" class="btn btn-outline-primary">
            Zobacz więcej
        </button>
    </div>
</div>