@using Microsoft.AspNetCore.Identity
@using Hospital.Model.Identity;

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="ml-auto">
        <ul class="nav navbar-nav ml-auto">
            <li class="nav-item">
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"
                   class="nav-link">Witaj @UserManager.GetUserName(User)!</a>
            </li>
            <li class="nav-item">
                <button type="submit"  class="btn btn-link nav-item nav-link" asp-area="Identity" asp-controller="Account" asp-action="Logout"> Wyloguj</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav ml-auto">
        <li class="nav-item">
            <a asp-area="Identity" asp-controller="Account" asp-action="Register"
               class="nav-link">Rejestracja!</a>
        </li>
        <li class="nav-item">
            <a asp-area="Identity" asp-controller="Account" asp-action="Login" class="nav-link">Logowanie</a>
        </li>
    </ul>
}